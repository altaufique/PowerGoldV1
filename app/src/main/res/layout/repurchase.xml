<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_menu"
    tools:context="com.fhb.powergoldv1.Registration">

    <android.support.v7.widget.Toolbar
        style="@style/DarkToolBarTheme"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:gravity="center"/>


    <TextView
        style="@style/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="RE-PURCHASE"
        android:id="@+id/textView2"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true" />

    <TextView
        style="@style/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stockish Price Repurchase"
        android:id="@+id/textView67"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView67"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginTop="28dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                style="@style/editTextBase"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:id="@+id/textView68"
                android:textSize="15sp"
                android:text="Gold Type: "
                android:layout_weight="1"
                android:gravity="right"
                android:paddingLeft="5sp"/>

            <TextView
                style="@style/editTextBase"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:id="@+id/repurchaseGoldType"
                android:textSize="22sp"
                android:text="1/2gmSy"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/lightblue"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <TextView
                style="@style/editTextBase"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/tvRatelabel"
                android:text="RM/unit:  "
                android:layout_weight="1"
                android:gravity="end" />

            <TextView
                style="@style/editTextBase"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:id="@+id/repurchaseRate"
                android:textColor="@color/lightblue"
                android:text="188,000.00"
                android:paddingRight="5sp"
                android:textIsSelectable="true"
                android:layout_weight="1"
                android:gravity="left" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
