<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fhb.powergold.Registration">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Member&apos;s Menu"
        android:id="@+id/textViewRegistration"
        android:textColor="#febf05"
        android:textAlignment="center"
        android:textSize="35sp"
        android:background="#050505"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:password="false"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD NEW"
        android:id="@+id/buttonAddMember"
        android:textSize="20sp"
        android:width="280sp"
        android:textColor="#2620a1"
        android:textStyle="normal"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textViewRegistration"
        android:layout_alignLeft="@+id/buttonUpdateMember"
        android:onClick="onClickRegisterMenu"
        android:layout_alignStart="@+id/buttonUpdateMember" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE or DELETE"
        android:id="@+id/buttonUpdateMember"
        android:textSize="20sp"
        android:width="280sp"
        android:textColor="#2620a1"
        android:textStyle="normal"
        android:layout_below="@+id/buttonAddMember"
        android:onClick="onClickRegisterMenu"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
